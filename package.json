{
  "name": "cls-debug-logger",
  "version": "0.0.2",
  "description": "A logger that makes use of continuation-local-storage (cls) to record logs with the same sessionId throughout the function call chain including callbacks and event emitter handlers.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "lint": "eslint",
    "test": "jest",
    "build": "tsc",
    "example": "cross-env DEBUG=* ts-node ./example/index.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm test && npm run lint",
    "version": "npm run lint && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TerryHighfield/cls-debug-logger.git"
  },
  "keywords": [
    "continuation-local-storage",
    "local-storage",
    "cls",
    "cls-hooked",
    "debug",
    "logger",
    "logging",
    "session"
  ],
  "author": "Terence Highfield",
  "license": "ISC",
  "devDependencies": {
    "@types/cls-hooked": "^4.3.0",
    "@types/debug": "^4.1.5",
    "@types/jest": "^25.2.3",
    "@types/uuid": "^8.0.0",
    "eslint": "^7.2.0",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "ts-jest": "^26.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typemoq": "^2.1.0",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "cls-hooked": "^4.2.2",
    "cross-env": "^7.0.2",
    "debug": "^4.1.1",
    "ts-node": "^8.10.2",
    "uuid": "^8.1.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,md}": "prettier --write"
  }
}
