{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6"],
    "allowJs": true,
    "checkJs": true,
    "types": ["node", "jest"],
    "declaration": true,
    "outDir": "lib",
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test/**/*"]
}
